<body>

  <!-- tiny escape hint (almost invisible) -->
  <div id="esc-hint" aria-hidden="true">Press ESC to exit</div>

  <!-- Hacked overlay -->
  <div id="hacked" role="dialog" aria-live="assertive" aria-label="Hacked message">
    <h1>HACKED</h1>
    <p id="sub">Suspicious activity detected. Securing system...</p>

    <div class="bar" aria-hidden="true">
      <div class="fill" id="fill"></div>
    </div>

    <div class="small">This is a harmless prank. Nothing is harmed. (Esc to exit)</div>
  </div>

  <!-- Normal site content -->
  <div id="site">
    <h2>Welcome back</h2>
    <p>The prank is over â€” this is the normal site content.</p>
    <p>Have fun and be kind to your friends ðŸ˜Š</p>
  </div>

<script>
(function(){
  const DURATION = 300; // seconds (5 minutes)
  const fill = document.getElementById('fill');
  const hacked = document.getElementById('hacked');
  const site = document.getElementById('site');
  const sub = document.getElementById('sub');

  let elapsed = 0;
  const tickInterval = 1000; // 1 second
  const total = DURATION;

  // progress update
  let timer = setInterval(() => {
    elapsed++;
    const pct = Math.min(100, Math.round((elapsed/total)*100));
    fill.style.width = pct + '%';

    // staged messages for effect
    if(elapsed === 10) sub.textContent = "Alerting security team...";
    if(elapsed === 60) sub.textContent = "Analyzing system state...";
    if(elapsed === 180) sub.textContent = "Finalizing checks...";
    if(elapsed === 240) sub.textContent = "Almost done...";

    if(elapsed >= total){
      finish();
    }
  }, tickInterval);

  function finish(){
    clearInterval(timer);
    hacked.style.display = 'none';
    site.style.display = 'block';
    fill.style.width = '0%';
    // Optional: small friendly reveal message
    setTimeout(() => {
      site.querySelector('h2').textContent = "Just kidding â€” all good!";
    }, 600);
  }

  // emergency escape via ESC key
  document.addEventListener('keydown', (e) => {
    if(e.key === 'Escape' || e.key === 'Esc'){
      clearInterval(timer);
      finish();
    }
  });

  // also allow a double-tap/click on the overlay corner to exit (mobile-friendly):
  let cornerTaps = 0;
  const cornerTimeout = 1800; // 1.8s window
  const escHint = document.getElementById('esc-hint');
  escHint.addEventListener('click', () => {
    cornerTaps++;
    if(cornerTaps >= 2){
      clearInterval(timer);
      finish();
    }
    setTimeout(()=> cornerTaps = 0, cornerTimeout);
  });

  // note: we intentionally do not show any prominent "Stop" button to keep prank effect.
})();
</script>

</body>
</html>
