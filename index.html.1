<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Important</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <style>
    html,body{height:100%;margin:0;font-family:Arial,Helvetica,sans-serif;background:#fff;}
    /* Normal content (hidden initially) */
    #site {display:none;padding:32px;text-align:center;}
    /* Fullscreen hacked overlay */
    #hacked {
      position:fixed; inset:0; background:#050505; color:#ff4d4d;
      display:flex; align-items:center; justify-content:center; flex-direction:column;
      z-index:9999; text-align:center; padding:20px;
    }
    h1{font-size:56px; margin:0 0 8px; letter-spacing:6px;}
    p{margin:6px 0 16px; font-size:18px; color:#ffdede;}
    .bar{width:80%; max-width:760px; background:#222; height:16px; border-radius:10px; overflow:hidden;}
    .fill{height:100%; width:0%; background:linear-gradient(90deg,#ff4d4d,#ffb3b3); transition:width 0.9s linear;}
    .btn{margin-top:16px; padding:10px 16px; border-radius:8px; border:none; cursor:pointer; font-weight:700;}
    .stop{background:#ffffff;color:#111;}
    .small{color:#cfcfcf; margin-top:10px; font-size:13px;}
    @keyframes flicker { 0%{opacity:1}50%{opacity:.92}100%{opacity:1} }
    #hacked h1{animation:flicker 1s infinite;}
  </style>
</head>
<body>

  <!-- Hacked overlay -->
  <div id="hacked" role="dialog" aria-live="assertive" aria-label="Hacked message">
    <h1>HACKED</h1>
    <p id="sub">Suspicious activity detected. Securing system...</p>

    <div class="bar" aria-hidden="true">
      <div class="fill" id="fill"></div>
    </div>

    <button class="btn stop" id="stopBtn">Stop prank</button>
    <div class="small">This is only a prank — nothing is harmed.</div>
  </div>

  <!-- Normal site content -->
  <div id="site">
    <h2>Welcome back</h2>
    <p>The prank is over — this is the normal site content.</p>
    <p>If you want to stop the prank early, press "Stop prank".</p>
  </div>

<script>
(function(){
  const DURATION = 180; // seconds (3 minutes)
  const fill = document.getElementById('fill');
  const hacked = document.getElementById('hacked');
  const site = document.getElementById('site');
  const stopBtn = document.getElementById('stopBtn');
  const sub = document.getElementById('sub');

  let elapsed = 0;
  const tickInterval = 1000;
  const total = DURATION;
  let timer = setInterval(() => {
    elapsed++;
    const pct = Math.min(100, Math.round((elapsed/total)*100));
    fill.style.width = pct + '%';

    if(elapsed === 8) sub.textContent = "Alerting security team...";
    if(elapsed === 45) sub.textContent = "Analyzing system state...";
    if(elapsed === 150) sub.textContent = "Finalizing checks...";

    if(elapsed >= total){
      finish();
    }
  }, tickInterval);

  function finish(){
    clearInterval(timer);
    hacked.style.display = 'none';
    site.style.display = 'block';
    fill.style.width = '0%';
  }

  stopBtn.addEventListener('click', () => {
    clearInterval(timer);
    sub.textContent = "Prank stopped — everything is safe.";
    setTimeout(finish, 600);
  });

  document.addEventListener('keydown', (e) => {
    if(e.key === 'Escape') stopBtn.click();
  });
})();
</script>

</body>
</html>
